<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="11dp"
        android:text="This is your private trip?" />

    <Button
        android:id="@+id/CreateTour"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/signupbt"
        android:backgroundTint="#35BBAE"
        android:text="NEXT"
        android:textColor="#EAEBEB"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextMinC"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textViewMinC"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/radiusbutton"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:text="0"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/textViewMinC"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAdult"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Min Cost" />

    <TextView
        android:id="@+id/textViewMaxC"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextChildren"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="98dp"
        android:layout_toEndOf="@+id/textViewAdult"
        android:text="Max Cost" />

    <EditText
        android:id="@+id/editTextMaxC"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textViewMaxC"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/editTextAdult"
        android:background="@drawable/radiusbutton"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:text="0"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/editTextTourname"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:layout_below="@+id/TextViewTourname"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radiusbutton"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/editTextStartday"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textViewStartday"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/radiustext"
        android:ems="8"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/editTextEndday"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textViewStartday"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/imageButtonStartTime"
        android:background="@drawable/radiustext"
        android:ems="8"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/TextViewTourname"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="21dp"
        android:text="Tour name" />

    <TextView
        android:id="@+id/textViewAdult"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextStartday"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Adult" />

    <TextView
        android:id="@+id/textViewChildren"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextStartday"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="99dp"
        android:layout_toEndOf="@+id/textViewAdult"
        android:text="Children" />

    <TextView
        android:id="@+id/textViewEndday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTourname"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        android:layout_toEndOf="@+id/textViewStartday"
        android:text="End day" />

    <TextView
        android:id="@+id/textViewStartday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTourname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Start day" />

    <ImageButton
        android:id="@+id/imageButtonStartTime"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textViewStartday"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/editTextStartday"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/imageButtonEndTime"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textViewEndday"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/editTextEndday"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/calendar" />

    <EditText
        android:id="@+id/editTextAdult"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textViewAdult"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/radiusbutton"
        android:ems="8"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:text="0"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/editTextChildren"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_below="@+id/textViewAdult"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/editTextAdult"
        android:background="@drawable/radiusbutton"
        android:ems="8"
        android:inputType="textPersonName"
        android:paddingStart="30px"
        android:text="0"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/textViewChooseImage"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextMinC"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radiusbutton"
        android:paddingStart="15dp"
        android:text="Choose your image                            +"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textColor="#BBB"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="308dp"
        android:layout_height="110dp"
        android:layout_below="@+id/textViewChooseImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="51dp"
        app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

</RelativeLayout>