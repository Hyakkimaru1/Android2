<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.tourDetail">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:text="Rate this point"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:numStars="5"
        android:progressTint="#F1D703"
        android:rating="2"
        android:stepSize="1">

    </RatingBar>

    <TextView
        android:id="@+id/textViewRatingAndRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:text="Rating and reviews"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRatingAndRv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="11dp"
        android:text="2"
        android:textSize="80dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-52dp"
        android:layout_marginTop="-12dp"
        android:clickable="false"
        android:numStars="5"
        android:progressBackgroundTintMode="add"
        android:progressTint="#FFE401"
        android:rating="2"
        android:saveEnabled="false"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:stepSize="1"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginStart="60dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="555" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="1" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/ratingBar"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/textView7"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="5"
        android:scaleX=".5"
        android:scaleY=".4" />

    <RatingBar
        android:id="@+id/ratingBar4"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/ratingBar3"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="-12dp"
        android:layout_toEndOf="@+id/textView2"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="4"
        android:scaleX=".5"
        android:scaleY=".4" />

    <RatingBar
        android:id="@+id/ratingBar5"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/ratingBar4"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="-14dp"
        android:layout_toEndOf="@+id/textView3"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="3"
        android:scaleX=".5"
        android:scaleY=".4" />

    <RatingBar
        android:id="@+id/ratingBar6"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/ratingBar5"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="-13dp"
        android:layout_toEndOf="@+id/textView4"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="2"
        android:scaleX=".5"
        android:scaleY=".4" />

    <RatingBar
        android:id="@+id/ratingBar7"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/ratingBar6"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="-13dp"
        android:layout_toEndOf="@+id/textView5"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="1"
        android:scaleX=".5"
        android:scaleY=".4" />

    <ListView
        android:id="@+id/linarLayout"
        android:layout_width="409dp"
        android:layout_height="214dp"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"></ListView>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_below="@+id/linarLayout"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Write a review..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button2"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/signupbt"
        android:backgroundTint="#F3D584"
        android:text="Send review" />

</RelativeLayout>