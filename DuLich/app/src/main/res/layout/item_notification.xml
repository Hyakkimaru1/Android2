<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/button_radius">

    <RelativeLayout
        android:id="@+id/viewInvite"
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <ImageView
            android:id="@+id/avtTourInvite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/avt_radius"
            android:src="@drawable/person" />

        <Button
            android:id="@+id/confirm_invite"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/textTimeInvite"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/avtTourInvite"
            android:background="@drawable/bt_round_noti"
            android:text="Confirm"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/delete_invite"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/textTimeInvite"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/confirm_invite"
            android:background="@drawable/bt_round_del"
            android:text="Delete"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textTimeInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNotification"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/avtTourInvite"
            android:text="TextView" />

        <TextView
            android:id="@+id/textNotification"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/avtTourInvite"
            android:text="TextView"
            android:textSize="17dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>