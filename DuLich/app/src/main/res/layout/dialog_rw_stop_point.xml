<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
        android:id="@+id/mainPic"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/person" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/calendar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/place" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/service" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"

        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/price" />

    <TextView
        android:id="@+id/priceMin"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/group"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="2dp"
        android:text="price"
        android:textColor="#18C597"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/priceMax"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/group"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/price3"
        android:text="price"
        android:textColor="#18C597"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/group"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/priceMin"
        android:text="-"
        android:textColor="#18C597"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainPic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:text="place"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/place"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="5dp"
            android:text="calendar"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/calendar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:text="group"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textViewRatingAndRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:text="Rating and reviews"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewRatingAndRv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="47dp"
                android:layout_marginTop="11dp"
                android:text="2"
                android:textSize="80dp" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-52dp"
                android:layout_marginTop="-12dp"
                android:clickable="false"
                android:numStars="5"
                android:progressBackgroundTintMode="add"
                android:progressTint="#FFE401"
                android:rating="2"
                android:saveEnabled="false"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:stepSize="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="5" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="1" />

            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/ratingBar"
                android:layout_marginStart="-66dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/textView7"
                android:numStars="5"
                android:progressTint="#FFEB3B"
                android:rating="5"
                android:scaleX=".5"
                android:scaleY=".4" />

            <RatingBar
                android:id="@+id/ratingBar4"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_below="@+id/ratingBar3"
                android:layout_marginStart="-66dp"
                android:layout_marginTop="-12dp"
                android:layout_toEndOf="@+id/textView2"
                android:numStars="5"
                android:progressTint="#FFEB3B"
                android:rating="4"
                android:scaleX=".5"
                android:scaleY=".4" />

            <RatingBar
                android:id="@+id/ratingBar5"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_below="@+id/ratingBar4"
                android:layout_marginStart="-66dp"
                android:layout_marginTop="-14dp"
                android:layout_toEndOf="@+id/textView3"
                android:numStars="5"
                android:progressTint="#FFEB3B"
                android:rating="3"
                android:scaleX=".5"
                android:scaleY=".4" />

            <RatingBar
                android:id="@+id/ratingBar6"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_below="@+id/ratingBar5"
                android:layout_marginStart="-66dp"
                android:layout_marginTop="-13dp"
                android:layout_toEndOf="@+id/textView4"
                android:numStars="5"
                android:progressTint="#FFEB3B"
                android:rating="2"
                android:scaleX=".5"
                android:scaleY=".4" />

            <RatingBar
                android:id="@+id/ratingBar7"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_below="@+id/ratingBar6"
                android:layout_marginStart="-66dp"
                android:layout_marginTop="-13dp"
                android:layout_toEndOf="@+id/textView5"
                android:numStars="5"
                android:progressTint="#FFEB3B"
                android:rating="1"
                android:scaleX=".5"
                android:scaleY=".4" />

            <ImageButton
                android:id="@+id/reviewsStopPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textViewRatingAndRv"
                android:background="@null"
                app:srcCompat="@drawable/button_right" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>