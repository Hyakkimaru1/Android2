<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialong_radius"
    tools:context=".activity.tourDetail">


    <Button
        android:id="@+id/buttonSendCM"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_below="@+id/editTextCM"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/signupbt"
        android:backgroundTint="#F3D584"
        android:text="Send review" />

    <ListView
        android:id="@+id/listViewCM"
        android:layout_width="409dp"
        android:layout_height="467dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"></ListView>

    <EditText
        android:id="@+id/editTextCM"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/listViewCM"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Write a review..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="All comments:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewTotalComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="52"
        android:textSize="24sp" />
</RelativeLayout>